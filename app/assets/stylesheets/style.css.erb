body {
    background: url('<%= asset_path 'mountains2.jpg' %>');
    background-repeat: no-repeat;
    background-position: center center;
    background-attachment: fixed;
    background-size: cover;
  }
.header{
  width:100%;
  height: 300px;
  padding-top: 100px;
  text-align: center;
  color: #fff;
  text-shadow: 1px 0 #000, 1px 1px #000, 0 0 #000, 0 1px #000;
  font-weight:300;
  font-size: 2.4em;
  font-family: 'Yanone Kaffeesatz', sans-serif;
  background: url('<%= asset_path 'grid.png' %>');
}
.image, .image-box {
  font-family: 'Open Sans', sans-serif;
  width: 650px;
  margin-bottom:10px;

}
.image-box{
  margin-bottom: 50px;
}
.navibar li {
  color: #eee;
  list-style: none;
  float: left;
  font-weight: 200;
  font-size: 1.8em;
  margin-top: 10px;
  padding:10px;
}
.navibar li.category{
  border-left: 1px dashed #7990a6;
}
.navibar{
  font-family: 'Yanone Kaffeesatz', sans-serif;
  height: 80px;
  background-color: rgba(155, 176, 200, 0.95);
  min-width: 900px;
  width:100%;
  box-shadow: 0 0 10px #000;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}
.navibar .title{
  font-weight: 400;
}
.search-button, .search-input{
  background: none;
  border:none;
}
.search-input{
  border-bottom: 1px dashed #7990a6;
  outline:none
}

.search-button:hover{
  color: #fff;
}
.socials{
  margin-top: 10px;
}
.info{
  margin-top: 55px;
  font-size: 1.8em;
}
.container-non-responsive {
  /* Margin/padding copied from Bootstrap */
  margin-left: auto;
  margin-right: auto;
  padding-left: 15px;
  padding-right: 15px;
  
  /* Set width to your desired site width */
  width: 1170px;
}
#content{
  background-color: rgba(255,255,255,0.9);
  box-shadow: 0 0 15px #000;
}


.dl-link {
  float: right;
}
#foot{
  padding:10px;
  color:#ddd;
  background: url('<%= asset_path 'grid.png' %>');
}